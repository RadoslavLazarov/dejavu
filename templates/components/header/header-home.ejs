<header id="header-home">
    <div class="row m-0">
        <div class="col-3 p-0">
            <div class="logo-wrapper">
                <img src="static/logo-purple.png" alt="">
            </div>
        </div>
        <div class="col-6 p-0">
            <nav>
                <ul>
                    <% navCategories.forEach(function(category) { %>
                        <li><a href="<%= category.url %>"><%= category.name[getLocale] %></a></li>
                    <% }); %>
                </ul>
            </nav>
        </div>
        <div class="col-3 p-0">
            <ul>
                <li><a class="<%= (lang=="bg"?"active":"") %>" href="/lang/bg">Bulgarian</a></li>
                <li><a class="<%= (lang=="en"?"active":"") %>" href="/lang/en">English</a></li>
            </ul>
        </div>
    </div>

</header>
