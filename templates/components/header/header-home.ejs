<!-- Load Facebook SDK for JavaScript -->
<div id="fb-root"></div>

<!-- Your customer chat code -->
<div class="fb-customerchat"
  attribution=setup_tool
  page_id="449532792515169"
  greeting_dialog_display="hide">
</div>

<header id="header-home">
    <div class="row m-0">
        <div class="col-12 p-0 header-top"> 
            <div class="row m-0">
                <div class="col-6 social">
                    <a href="https://www.facebook.com/DEJAVURUSE/" class="circle-animate" target="blank">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="/" class="circle-animate">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="/" class="circle-animate">
                        <i class="fab fa-youtube"></i>
                    </a>
                    <a href="tel:+359887777072" class="circle-animate">
                        <i class="fas fa-phone"></i>
                    </a>
                </div>
                <div class="col-6 language">
                    <ul>
                        <li><a class="circle-animate <%= (lang=="bg"?"active":"") %>" href="/lang/bg">bg</a></li>
                        <li><a class="circle-animate <%= (lang=="en"?"active":"") %>" href="/lang/en">en</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-12 p-0 d-flex justify-content-center"> 
            <nav role="main-nav">
                <ul class="p-0">
                    <% navCategories.forEach(function(category) { %>
                        <li><a href="<%= category.url %>"><%= category.name[getLocale] %></a></li>
                    <% }); %>
                </ul>
            </nav>
             <div class="logo-wrapper">
                <div class="logo">
                    <a href="/"><img src="static/logo-white.png" alt=""></a>
                </div>
            </div>
        </div>
    </div>

</header>
