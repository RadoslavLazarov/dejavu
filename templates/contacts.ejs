    <div class="row no-gutters justify-content-center">
        <div class="col-8">
            <div class="row">
                <div class="col-4">
                    <div class="contact">
                        <div>
                            <i class="fas fa-map-marker-alt contact__icon"></i>
                        </div> 
                        <div class="contact__description">
                            <h2 class="contact__name"><%= translation.contacts.address %></h2>
                            <div class="contact__value">
                                бул. „Съединение“ 25, 7002 Русе Център, Русе
                            </div>
                        </div> 
                    </div>
                </div>
                <div class="col-4">
                    <div class="contact">
                        <div>
                            <i class="fas fa-phone contact__icon"></i>
                        </div> 
                        <div class="contact__description">
                            <h2 class="contact__name"><%= translation.contacts.phone %></h2>
                            <div class="contact__value">
                                <%= translation.contacts.phone %>: +359883447893
                            </div>
                        </div> 
                    </div>
                </div>
                <div class="col-4">
                    <div class="contact">
                        <div>
                            <i class="fas fa-envelope-open contact__icon"></i>
                        </div> 
                        <div class="contact__description">
                            <h2 class="contact__name"><%= translation.contacts.email %></h2>
                            <div class="contact__value">
                                <%= translation.contacts.email %>: dejavuruse@gmail.com
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
