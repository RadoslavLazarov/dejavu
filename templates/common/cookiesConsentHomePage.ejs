<% if (cookies.cookies_consent !== 'yes') { %>
<div class="container-fluid cookie-warning cookie-warning--homepage">
    <div class="row">
        <div class="col-12">
            <div class="row cookie-content">
                <div class="cookie-content__message">
                    <%= translation.messages.cookies %>
                </div>
                <div class="cookie-content__buttons">
                    <a href="/cookies" class="cookie-content__buttons--learn-more button fadeout-page">
                        <%= translation.buttons.learnMore %>
                        <span></span>
                    </a>
                    <a href="/cookies-consent" class="cookie-content__buttons--agree button">
                        <%= translation.buttons.agree %>
                        <span></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>