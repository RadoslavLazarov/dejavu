<% layout('common/layout/video') -%>

<div class="swiper-container">
    <div class="swiper-wrapper">
    <% if (uploads) { %>
        <% uploads.forEach(function(item) { %>
            <div class="swiper-slide">
                <div class="d-flex justify-content-center youtube-container">
                    <div class="col-12 batka">
                        <iframe
                            src="https://www.youtube.com/embed/<%= item %>"
                            frameborder="0" 
                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" 
                            allowfullscreen
                            class='youtube-player'>
                        </iframe>
                    </div>
                </div>
            </div>
        <% }); %>
    <% }; %>
    <% if (nextPageToken) { %>
        <div class="swiper-slide append-buttons">
            <div class="col-12 batka batka--last">
                <div class="uploads-container" data-token="<%= nextPageToken %>">
                    <div class="view-more" id="uploads">
                        <%= translation.buttons.loadMoreVideos %>
                        <span class="animated-line"></span>
                    </div>
                </div>
            </div>
        </div>
    <% }; %>
    </div>
    <!-- Add Scrollbar -->
    <div class="swiper-scrollbar"></div>
    <!-- Add Arrows -->
    <div class="swiper-button-next swiper-button-white"></div>
    <div class="swiper-button-prev swiper-button-white"></div>
</div>
    
